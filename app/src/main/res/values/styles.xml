<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TVStyle">
        <item name="android:fontFamily">@font/amita_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CategoryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/category_button_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


</resources>